            </ListView.View>
        </ListView>
        <Button Name="btn1" Grid.Row="1" Grid.Column="0" Margin="10 10 10 10" Content="Создать"/>
        <Button Name="btn2" Grid.Row="1" Grid.Column="2" Margin="10 10 10 10" Content="Удалить" Click="btn2_Click"/>
        <Button Name="btn3" Grid.Row="2" Grid.Column="2" Margin="10 10 10 10" Content="Страница 1" FontSize="10"/>
                <Button Name="btn4" Grid.Row="2" Grid.Column="0" Margin="10 10 10 10" Content="Страница 2" FontSize="10"/>
